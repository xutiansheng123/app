<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/other_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@color/txcolorw"
        android:maxEms="20"
        android:padding="5dp"
        android:textColor="@color/txcolorb"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/iv_headimg"
        app:layout_constraintTop_toTopOf="@id/iv_headimg" />

    <TextView
        android:id="@+id/mine_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@color/txcolorw"
        android:maxEms="20"
        android:padding="5dp"
        android:textColor="@color/txcolorb"
        android:textSize="12sp"
        app:layout_constraintRight_toLeftOf="@id/iv_mineimg"
        app:layout_constraintTop_toTopOf="@id/iv_mineimg" />

    <com.shehuan.niv.NiceImageView
        android:id="@+id/iv_mineimg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/tx"
        app:corner_radius="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.shehuan.niv.NiceImageView
        android:id="@+id/iv_headimg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/tx"
        app:corner_radius="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>