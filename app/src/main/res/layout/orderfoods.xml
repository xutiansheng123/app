<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="10dp">

    <com.shehuan.niv.NiceImageView
        android:scaleType="centerCrop"
        app:corner_radius="6dp"
        android:id="@+id/iv_foodimg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/foodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="蒜蓉茄子"
        android:textColor="@color/txcolorb"
        app:layout_constraintLeft_toRightOf="@id/iv_foodimg"
        app:layout_constraintTop_toTopOf="@id/iv_foodimg" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="¥ 12"
        android:textColor="@color/txcolorb"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_foodimg" />
    <TextView
        android:id="@+id/foodcontent"
        app:layout_constraintTop_toBottomOf="@id/foodname"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:text="香辣"
        app:layout_constraintLeft_toRightOf="@id/iv_foodimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
       android:id="@+id/tv_count"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/foodcontent"
        app:layout_constraintLeft_toRightOf="@id/iv_foodimg"
        android:text="x  1"
        android:textColor="@color/grey"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>