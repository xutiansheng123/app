<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingLeft="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="10dp">
<ImageView
    android:id="@+id/iv_icon"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:src="@mipmap/leo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        android:id="@+id/addressname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="青年城smart公寓2栋"
        android:textColor="@color/txcolorb"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/info"
        android:text="成都市双流区锦韵路533号"
        android:textColor="@color/txcolorgrey"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/addressname"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/addressname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>