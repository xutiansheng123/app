<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/txcolorw"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:src="@mipmap/edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="1609"
        android:textColor="@color/txcolorgrey"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/addressname"
        app:layout_constraintTop_toBottomOf="@id/addressname" />

    <TextView
        android:id="@+id/tv_nameandphonenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="徐天盛 18615521792"
        android:textColor="@color/txcolorgrey"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/info"
        app:layout_constraintTop_toBottomOf="@id/info" />

    <TextView
        android:id="@+id/addressname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="青年城SMART公寓2栋"
        android:textColor="@color/txcolorb"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/txcolorgrey"
        app:layout_constraintLeft_toLeftOf="@id/info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nameandphonenum" />
</androidx.constraintlayout.widget.ConstraintLayout>