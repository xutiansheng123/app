<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/whiteradius"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="4dp"
    android:padding="8dp"
    android:layout_height="wrap_content">
     <TextView
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         android:id="@+id/tv_shopName"
         android:textStyle="bold"
         android:layout_width="wrap_content"
         android:textSize="16sp"
         android:textColor="@color/txcolorb"
         android:text="不是外人干拌冒菜"
         android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_score"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_shopName"
        android:textColor="@color/pf"
        android:text="4.4分"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:text="月售1543"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_shopName"
        app:layout_constraintLeft_toRightOf="@id/tv_score"
        android:id="@+id/sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/startPrice"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@id/sales"
        app:layout_constraintTop_toBottomOf="@id/tv_shopName"
        android:textSize="10sp"
        android:text="起送15.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="5dp"
        android:text="夜间配送¥2"
        android:textSize="10sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_shopName"
        app:layout_constraintLeft_toRightOf="@id/startPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:text="2.8km"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_shopName" />

    <TextView
        app:layout_constraintBottom_toBottomOf="@id/tv_distance"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:text="46分钟"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_shopName"
        app:layout_constraintRight_toLeftOf="@id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.shehuan.niv.NiceImageView
        android:scaleType="centerCrop"
        android:id="@+id/shopheadImg"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_distance"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy_menu"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/shopheadImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/shopheadImg"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>